<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="500.0" prefWidth="800.0"
   xmlns="http://javafx.com/javafx/23.0.1"
   xmlns:fx="http://javafx.com/fxml/1">

   <!-- Right Pane - Background Panel (Gambar) -->
   <right>
      <StackPane>
         <ImageView fx:id="backgroundImage" fitHeight="500.0" fitWidth="300.0" preserveRatio="true" />
      </StackPane>
   </right>

   <!-- Left Pane - Form Login -->
   <left>
      <StackPane style="-fx-background-color: #f9f9f9;" BorderPane.alignment="CENTER" />
   </left>

   <!-- Center -->
   <center>
      <StackPane>
         <children>
            <VBox alignment="CENTER" maxWidth="500.0" prefHeight="600.0" prefWidth="500.0" spacing="20.0">
               <padding>
                  <Insets bottom="40" left="40" right="40" top="40" />
               </padding>

               <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Welcome back!" />

               <Text style="-fx-font-size: 14px; -fx-fill: #757575;" text="Please login and enter the calmify app" />

               <TextField fx:id="usernameField" maxWidth="300.0" prefHeight="42.0" promptText="Id/Username" />
               <PasswordField fx:id="passwordField" maxWidth="300.0" prefHeight="42.0" promptText="Password" />

               <Button fx:id="btnLogin" maxWidth="150.0" prefHeight="38.0" text="Login" />
               <Button fx:id="btnRegister" maxWidth="150.0" style="-fx-background-color: transparent; -fx-text-fill: red;" text="Register Here!" />
            </VBox>
         </children>
      </StackPane>
   </center>

</BorderPane>
